@model IEnumerable<Warehouse.Application.DTOs.UnitDto>

@{
    ViewData["Title"] = "Единицы измерения";
}

<h2 class="mb-4">Единицы измерения</h2>

<div class="mb-3">
    <a class="btn btn-success" asp-action="Create">
        <i class="bi bi-plus-circle"></i> Добавить единицу
    </a>
</div>

<table class="table table-hover align-middle">
    <thead class="table-dark">
        <tr>
            <th>Название</th>
            <th>Активен</th>
            <th class="text-center">Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var u in Model)
        {
            <tr>
                <td>@u.Name</td>
                <td>@(u.IsActive ? "Да" : "Нет")</td>
                <td class="text-center">
                    <a class="btn btn-sm btn-warning me-1" asp-action="Edit" asp-route-id="@u.Id">
                        <i class="bi bi-pencil"></i> Изменить
                    </a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@u.Id"
                       onclick="return confirm('Удалить единицу?');">
                        <i class="bi bi-trash"></i> Удалить
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
