@model Warehouse.Application.DTOs.UnitCreateDto

@{
    ViewData["Title"] = "Изменить единицу измерения";
}

<div class="card shadow-sm mt-4">
    <div class="card-header bg-warning text-dark">
        <i class="bi bi-pencil-square"></i> @ViewData["Title"]
    </div>
    <div class="card-body">
        <form asp-action="Edit" method="post">
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3 form-check">
                <input type="checkbox" class="form-check-input" name="isActive" value="true" checked />
                <label class="form-check-label">Активен</label>
            </div>

            <button type="submit" class="btn btn-success me-2">
                <i class="bi bi-save"></i> Сохранить
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Назад
            </a>
        </form>
    </div>
</div>
